  },
  "scripts": {
    "build:reset": "rm -rf public && mkdir -p public",
    "build:src": "webpack",
    "build:static": "cp -v -R source/index.html public",
    "build": "npm run build:reset && npm run build:src && npm run build:static",
    "predev": "npm run build",
    "dev": "browser-sync start --files 'public/*' --server 'public/' --no-ghost-mode --no-inject-changes --no-notify --no-open & webpack -w & onchange 'source/index.html' -- npm run build:static"
  }
